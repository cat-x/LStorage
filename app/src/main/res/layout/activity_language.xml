<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">

    <ImageView
            android:padding="4dp"
            android:layout_margin="12dp"
            android:src="@drawable/icon_back_button"
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_toRightOf="@id/backButton"
            android:layout_alignBottom="@id/backButton"
            android:layout_alignTop="@id/backButton"
            android:gravity="center"
            android:id="@+id/titleTextView"
            android:text="@string/language"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:background="#f5f5f5"
            android:hint="该文本框可以进行内容变化监听 \n 现在是默认数据"
            android:layout_margin="32dp"
            android:layout_below="@id/titleTextView"
            android:id="@+id/contentListenEditText2"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    <EditText
            android:background="#f5f5f5"
            android:hint="该文本框的内容来自于缓存 \n 现在是默认数据"
            android:layout_margin="32dp"
            android:layout_below="@id/contentListenEditText2"
            android:id="@+id/contentCacheEditText2"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

</RelativeLayout>